#product_show
	%h1= @product.title
	%p.username
		Added by
		= @product.user.name
		= time_ago_in_words(@product.created_at)
	.clearfix
		.product_image_description
			= image_tag @product.image.url(:medium)
			.description= simple_format(@product.description)
		.product_data
			= link_to 'Visit Link', @product.link, class: 'button'

			%h2.priceTitle Price
			%p.price2= print_price(@product.price)
			%p= print_stock(@product.stock)
			%p.stocknumber= @product.stock
			- if @product.user == current_user
				= link_to 'Edit', edit_product_path(@product), class: 'data'
				= link_to 'Delete', product_path(@product), method: :delete, data: { confirm: 'Are you sure?'}, class: 'data'
			= link_to 'Back', root_path, class: 'data'
