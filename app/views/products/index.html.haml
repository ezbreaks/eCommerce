- if user_signed_in?
	%p#intro
		Hello
		= current_user.name
		%br/
		%span
			Sales!! Last Chance 50%!
- else 
	%p#intro
		What do you want to do this summer?
		%br/
		%span
			Sales!! Last Chance 50%!
#products
	- @products.each do |product|
		.product
			.product_image
				= link_to (image_tag product.image.url(:small))
			.product_content	
				.title
					%h2= link_to product.title, product
					Price:
					= print_price(product.price)
					= print_stock(product.stock)
				= link_to 'Add to cart', new_order_item_path(product_id: product.id)	
					
				
				

	= link_to 'Add product', new_product_path	