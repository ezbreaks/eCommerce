<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @order.user_id %>
</p>
<p>
  <strong>Items:</strong> <%= @order.order_items.count %>
</p>
<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>
<hr>

<% @order.order_items.each do |item| %>
	<p><%= image_tag(item.product.image(:verysmall)) %>
	<p>Title <%= item.product.title %> </p>
	<p>Quantity <%= item.quantity %> </p>
	<p>Price <%= print_price(item.product.price) %> </p>
	<%= number_to_currency(item.total_price) %>
	<%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
	<%= link_to "Empty Cart", @order, data: { confirm: 'Are you sure?' }, method: :delete %>

	<%= number_to_currency(@order.total_price) %>

<%= link_to 'Edit', edit_order_path(@order) %> |
